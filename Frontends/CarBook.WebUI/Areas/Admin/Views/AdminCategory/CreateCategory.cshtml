@using CarBook.Dto.CategoryDtos
@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Kategori ile ilgili Ekleme işlemlerini bu sayfa üzerinden yapabilirsiniz.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputModel">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Name" placeholder="Kategori Adı Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategori Ekle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>

