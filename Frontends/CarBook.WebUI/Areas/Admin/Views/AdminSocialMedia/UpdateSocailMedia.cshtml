@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocailMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Güncelle</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal Medya ile ilgili Güncelle işlemlerini bu sayfa üzerinden yapabilirsiniz.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputModel">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Name" placeholder="Başlık Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Url</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Url" placeholder="Url Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">İkon</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Icon" placeholder="İkon Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Güncelle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
