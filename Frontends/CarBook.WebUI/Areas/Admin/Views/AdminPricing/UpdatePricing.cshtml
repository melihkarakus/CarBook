@model UpdatePricingDtos
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Fiyatlandırma Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Araba Fiyatlandırma Aylık, Günlük, Haftalık ile ilgili Güncelleme işlemlerini bu sayfa üzerinden yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="PricingID" class="form-control" />
                            <div class="form-group">
                                <label for="exampleInputModel">Fiyatlandırma Adı</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Name" placeholder="Fiyatlandırma Adı Giriniz...">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
