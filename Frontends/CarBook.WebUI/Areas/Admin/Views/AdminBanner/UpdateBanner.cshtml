@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Banner Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Banner ile ilgili Güncelleme işlemlerini bu sayfa üzerinden yapabilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="BannerID" class="form-control" />
                            <div class="form-group">
                                <label for="exampleInputModel">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Title" placeholder="Başlık Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">AÇıklama</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Description" placeholder="Açıklama Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="VideoDescription" placeholder="Video Açıklama Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Video URL</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="VideoUrl" placeholder="Video URL Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Güncelle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>

