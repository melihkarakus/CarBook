@model CreateCarDto
@{
    ViewData["Title"] = "CreateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Arabalar ile ilgili Ekleme işlemlerini bu sayfa üzerinden yapabilirsiniz.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputMarka">Marka</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputcı">Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputcı" asp-for="CoverImageUrl" placeholder="Kapak Fotoğraf Linki Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputkm">Km</label>
                                <input type="text" class="form-control" id="exampleInputkm" asp-for="Km" placeholder="Km Bilgisi Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTrans">Vites Türü</label>
                                <input type="text" class="form-control" id="exampleInputTrans" asp-for="Transmission" placeholder="Vites Türü Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputseat">Koltuk Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputseat" asp-for="Seat" placeholder="Koltuk Sayısı Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLugage">Bagaj Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputLugage" asp-for="Luggage" placeholder="Bagaj Sayısı Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInpuFuel">Yakıt Türü</label>
                                <input type="text" class="form-control" id="exampleInpuFuel" asp-for="Fuel" placeholder="Yakıt Türü Giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="exampleInpubı">Büyük Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInpubı" asp-for="BigImageUrl" placeholder="Büyük Kapak Fotoğrafı Giriniz...">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Araç Ekle</button>
                        </form>
                    </div> <!-- end card-body-->
                </div>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end page title -->
